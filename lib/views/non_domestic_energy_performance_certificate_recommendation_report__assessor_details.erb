<div class="govuk-body epc-blue-bottom">
  <h2 class="govuk-heading-l"><%= t('non_domestic_epc.rr.assessor_details.title') %></h2>
  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.name')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        [assessment[:assessor][:firstName], assessment[:assessor][:middleNames], assessment[:assessor][:lastName]].compact.join(' ')
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.employer_name')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        assessment[:assessor][:companyDetails][:companyName]
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.employer_address')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        [
          company[:companyAddressLine1],
          company[:companyAddressLine2],
          company[:companyAddressLine3],
          company[:companyTown],
          company[:companyPostcode]
        ].compact.reject(&:empty?).join(', ')
      %></dd>
    </div>
  </dl>
</div>
