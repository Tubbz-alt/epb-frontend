<div id="assessor_details" class="govuk-body epc-blue-bottom">
  <h2 class="govuk-heading-l"><%= t('non_domestic_epc.rr.assessor_details.title') %></h2>
  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.name')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        [assessment[:assessor][:firstName], assessment[:assessor][:middleNames], assessment[:assessor][:lastName]].compact.join(' ')
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.employer_name')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        assessment[:assessor][:companyDetails][:companyName]
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.employer_address')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        [
          company[:companyAddressLine1],
          company[:companyAddressLine2],
          company[:companyAddressLine3],
          company[:companyTown],
          company[:companyPostcode]
        ].compact.reject(&:empty?).join(', ')
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.number')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        assessment[:assessor][:schemeAssessorId]
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.scheme')
      %></dt>
      <dd class="govuk-summary-list__value"><%=
        assessment[:assessor][:registeredBy][:name]
      %></dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
        t('non_domestic_epc.rr.assessor_details.declaration')
      %></dt>
      <dd class="govuk-summary-list__value">
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text"><%=
              assessment[:relatedPartyDisclosureText] ?
              t('non_domestic_epc.rr.assessor_details.has_connection_text') :
              t('non_domestic_epc.rr.assessor_details.no_connection_text')
            %></span>
          </summary>
          <div class="govuk-details__text"><%=
            assessment[:relatedPartyDisclosureText] ?
              assessment[:relatedPartyDisclosureText] :
              t('non_domestic_epc.rr.assessor_details.declaration_text')
          %></div>
        </details>
      </dd>
    </div>
  </dl>
</div>
