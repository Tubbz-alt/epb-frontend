<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-body">
      <a
        href="<%= localised_url('/find-a-non-domestic-certificate')%>"
        class="govuk-back-link">
        <%=t('layout.body.breadcrumb.back')%>
      </a>
    </div>
  </div>
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl"><%= t('non_domestic_epc.rr.top_heading') %></h1>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <hr class="epc-light-top" />
      <%== erb :component__epc_summary_compact, locals: {
            assessment: assessment,
          }
      %>
  </div>
  <div class="govuk-grid-column-one-third">
    <hr class="epc-blue-top" />
    <%== erb :component__contents, locals: {
      title: t("non_domestic_epc.rr.contents.title"),
      sections: [
        {
          link: '#rating',
          text: 'non_domestic_epc.rr.rating.title'
        },
        {
          link: '#recommendations',
          text: 'non_domestic_epc.rr.recommendations.title'
        },
        {
          link: '#property_details',
          text: 'non_domestic_epc.rr.property_details.title'
        },
        {
          link: '#assessor_details',
          text: 'non_domestic_epc.rr.assessor_details.title'
        },
        {
          link: '#other_reports',
          text: 'non_domestic_epc.rr.other_reports.title'
        }
      ]
    } %>
  </div>
  <% if assessment[:relatedCepcReport] %>
    <div class="govuk-grid-column-two-thirds">
      <%== erb :non_domestic_energy_performance_certificate_recommendation_report__rating,
               locals: { assessment: assessment[:relatedCepcReport] }
      %>
    </div>
  <% end %>
  <div class="govuk-grid-column-two-thirds">
    <%== erb :non_domestic_energy_performance_certificate_recommendation_report__recommendations, locals: {
      assessment: assessment,
    }
    %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <%== erb :non_domestic_energy_performance_certificate_recommendation_report__property_details, locals: {
      assessment: assessment,
    }
    %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <%== erb :non_domestic_energy_performance_certificate_recommendation_report__assessor_details, locals: {
      assessment: assessment, company: assessment[:assessor][:companyDetails]
    }
    %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <%== erb :non_domestic_energy_performance_certificate_recommendation_report__related_assessments, locals: {
      assessment: assessment
    }
    %>
  </div>
</div>
