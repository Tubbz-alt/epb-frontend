<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('index.title') %>
    </h1>
    <p class="govuk-body">
      <%= t('index.introduction.what_you_need') %>
    </p>
    <p class="govuk-body">
      <%= t('index.introduction.how_it_works') %>
    </p>
    <p class="govuk-body">
      <%= t('index.scotland.description', :link => '<a href="https://www.gov.scot/publications/energy-performance-certificates-introduction/">' + t('index.scotland.link') + '</a>') %>
    </p>

    <h3 class="govuk-heading-s">
      <%= t('index.negative_epc.title') %>
    </h3>
    <ul class="govuk-list govuk-list--bullet">
      <li>
        <%= t('index.negative_epc.property_type') %></li>
      <li>
        <%= t('index.negative_epc.temporary') %>
      </li>
      <li>
        <%= t('index.negative_epc.demolished') %>
      </li>
    </ul>

    <details class="govuk-details" data-module="govuk-details">
      <summary class="govuk-details__summary">
        <span class="govuk-details__summary-text">
          <%= t('index.assessment.title') %>
        </span>
      </summary>
      <div class="govuk-details__text">
        <ul class='govuk-list'>
          <li>
            <%= t('index.assessment.30_minutes') %></li>
          <li>
            <%= t('index.assessment.presence') %>
          </li>
          <li>
            <%= t('index.assessment.no_damage') %>
          </li>
        </ul>
      </div>
    </details>

    <a 
      href="#" 
      role="button" 
      draggable="false" 
      class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"  
      data-module="govuk-button">
        <%= t('index.cta') %>
      <svg 
        class="govuk-button__start-icon" 
        xmlns="http://www.w3.org/2000/svg" 
        width="17.5" 
        height="19" 
        viewBox="0 0 33 40" 
        role="presentation" 
        focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    </a>

    <h2 class="govuk-heading-m">
      <%= t('index.before_you_start.title') %>
    </h2>

    <p class="govuk-body">
      <%= t('index.before_you_start.phone_text', :link => '<a href="tel:' + t('index.before_you_start.phone_number') + '">' + t('index.before_you_start.phone_number') + '</a>' ) %>
    </p>

    <p class="govuk-body">
      <%= t('index.before_you_start.switch_language.description', :link => '<a href="' + t('index.before_you_start.switch_language.url') + '">' + t('index.before_you_start.switch_language.link') + '</a>' ) %>
    </p>

    <p class="govuk-body">
      <%= t('index.before_you_start.commercial.description', :link => '<a href="' + path('/schemes') + '">' + t('index.before_you_start.commercial.link') + '</a>' ) %>
    </p>
  </div>
</div>
