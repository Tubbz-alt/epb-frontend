<div class="epc-blue-bottom">
  <h2 class="govuk-heading-l"><%= t('ac_cert.sections.sub_systems.title') %></h2>

  <% if assessment[:subSystems]%>
    <table class="govuk-table">
      <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header"><%= t('ac_cert.sections.sub_systems.number') %></th>
        <th scope="col" class="govuk-table__header"><%= t('ac_cert.sections.sub_systems.description') %></th>
        <th scope="col" class="govuk-table__header"><%= t('ac_cert.sections.sub_systems.refrigerant_type') %></th>
        <th scope="col" class="govuk-table__header"><%= t('ac_cert.sections.sub_systems.age') %></th>
      </tr>
      </thead>
      <tbody class="govuk-table__body">
      <% assessment[:subSystems].each do |sub_system| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell"><%== sub_system[:number] %></td>
          <td class="govuk-table__cell"><%== sub_system[:description] %></td>
          <td class="govuk-table__cell"><%== sub_system[:refrigerantType] %></td>
          <td class="govuk-table__cell"><%== sub_system[:age] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>
