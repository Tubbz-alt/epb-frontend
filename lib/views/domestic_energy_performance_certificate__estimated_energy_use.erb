<div class="epc-blue-bottom">
  <a id="heat-demand"></a>
  <h2 class="govuk-heading-l"><%= t('domestic_epc.sections.heat-demand.title') %></h2>
  <% unless assessment[:estimatedEnergyCost].nil? && assessment[:potentialEnergySaving].nil? %>
    <%== erb :component__summary_list, locals: {
      list: {
        "estimated_cost": {
          numerical: true,
          value: "£" + assessment[:estimatedEnergyCost].chomp(".00")
        },
        "three_year_saving": {
          numerical: true,
          value: "£" + assessment[:potentialEnergySaving].chomp(".00")
        }
      },
      translation_prefix: 'domestic_epc.sections.heat-demand.',
      skip_null: true,
    } %>

    <p class="govuk-body"><%= t('domestic_epc.sections.heat-demand.costs_and_savings') %></p>
    <p class="govuk-body"><%== t('domestic_epc.sections.heat-demand.based_on', :link => '<a class="govuk-link" href="' + t('domestic_epc.sections.heat-demand.based_on_url') + '">' + t('domestic_epc.sections.heat-demand.based_on_cta') + '</a>') %></p>
    <p class="govuk-body"><%== t('domestic_epc.sections.heat-demand.more_advice', :link => '<a class="govuk-link" href="' + t('domestic_epc.sections.heat-demand.more_advice_url') + '">' + t('domestic_epc.sections.heat-demand.more_advice_cta') + '</a>') %></p>
  <% end %>

  <h3 class="govuk-heading-m"><%= t('domestic_epc.sections.heat-demand.heating_in_property') %></h3>
  <p class="govuk-body"><%= t('domestic_epc.sections.heat-demand.energy_costs') %></p>

  <% unless assessment[:heatDemand][:currentWaterHeatingDemand].nil? && assessment[:heatDemand][:currentSpaceHeatingDemand].nil? %>
    <h4 class="govuk-heading-s"><%= t('domestic_epc.sections.heat-demand.estimated_energy') %></h4>
    <%== erb :component__summary_list, locals: {
      list: {
        "space_heating": {
          numerical: true,
          value: t('domestic_epc.sections.heat-demand.kwh_per_year', demand: assessment[:heatDemand][:currentSpaceHeatingDemand])
        },
        "water_heating": {
          numerical: true,
          value: t('domestic_epc.sections.heat-demand.kwh_per_year', demand: assessment[:heatDemand][:currentWaterHeatingDemand])
        }
      },
      translation_prefix: 'domestic_epc.sections.heat-demand.',
      skip_null: true,
    } %>
  <% end %>

  <% if assessment[:heatDemand][:impactOfLoftInsulation].nil? && assessment[:heatDemand][:impactOfCavityInsulation].nil? && assessment[:heatDemand][:impactOfSolidWallInsulation].nil? %>
    <h4 class="govuk-heading-s"><%= t('domestic_epc.sections.heat-demand.potential_saving') %></h4>
    <p class="govuk-body">
      <%= t('domestic_epc.sections.heat-demand.no_potential_saving') %>
    </p>
  <% else %>
    <table class="govuk-table">
      <caption class="govuk-table__caption"><%= t('domestic_epc.sections.heat-demand.potential_saving') %></caption>
      <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header"><%= t('domestic_epc.sections.heat-demand.type_of_insulation') %></th>
        <th scope="col" class="govuk-table__header"><%= t('domestic_epc.sections.heat-demand.amount_saved') %></th>
      </tr>
      </thead>
      <tbody class="govuk-table__body">
      <% if assessment[:heatDemand][:impactOfLoftInsulation] && assessment[:heatDemand][:impactOfLoftInsulation] < 0 %>
        <tr class="govuk-table__row">
          <th scope="row" class="govuk-table__header"><%= t('domestic_epc.sections.heat-demand.loft_insulation') %></th>
          <td class="govuk-table__cell" id="loft-insulation">
            <%= t('domestic_epc.sections.heat-demand.kwh_per_year', demand: assessment[:heatDemand][:impactOfLoftInsulation].abs) %>
          </td>
        </tr>
      <% end %>
      <% if assessment[:heatDemand][:impactOfCavityInsulation] && assessment[:heatDemand][:impactOfCavityInsulation] < 0  %>
        <tr class="govuk-table__row">
          <th scope="row" class="govuk-table__header"><%= t('domestic_epc.sections.heat-demand.cavity_insulation') %></th>
          <td class="govuk-table__cell" id="cavity-insulation">
            <%= t('domestic_epc.sections.heat-demand.kwh_per_year', demand: assessment[:heatDemand][:impactOfCavityInsulation].abs) %>
          </td>
        </tr>
      <% end %>
      <% if assessment[:heatDemand][:impactOfSolidWallInsulation] && assessment[:heatDemand][:impactOfSolidWallInsulation] < 0  %>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><%= t('domestic_epc.sections.heat-demand.solid_wall_insulation') %></th>
        <td class="govuk-table__cell" id="solid-wall-insulation">
          <%= t('domestic_epc.sections.heat-demand.kwh_per_year', demand: assessment[:heatDemand][:impactOfSolidWallInsulation].abs) %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

  <p class="govuk-body">
    <%== t('domestic_epc.sections.heat-demand.renewable_heat_incentive.body', :link=>'<a class="govuk-link" href="' + t('domestic_epc.sections.heat-demand.renewable_heat_incentive.url') + '">' + t('domestic_epc.sections.heat-demand.renewable_heat_incentive.cta') + '</a>') %>
  </p>
</div>
