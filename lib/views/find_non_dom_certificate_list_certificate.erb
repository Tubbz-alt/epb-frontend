<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header"><%= t('find_non_dom_certificate_results.table.address') %></th>
      <th scope="col" class="govuk-table__header"><%= t('find_non_dom_certificate_results.table.type') %></th>
      <th scope="col" class="govuk-table__header"><%= t('find_non_dom_certificate_results.table.expiry') %></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% certificate.each do |result|
      expire = Date.parse(result[:dateOfExpiry]) < Date.today
      %>
        <tr class="govuk-table__row">
          <th scope="row" class="govuk-table__header"><a href="/energy-performance-certificate/<%= result[:assessmentId] %>"><%= [result[:addressLine1], result[:addressLine2], result[:town], result[:postcode]].reject { |a| a.to_s.empty? }.join(", ") %></a></th>
          <td class="govuk-table__cell"><%= result[:typeOfAssessment] %></td>
          <td class="govuk-table__cell<%== ( expire ? ' govuk-!-font-weight-bold expired-text"' : "") %>"><%= Date.parse(result[:dateOfExpiry]).strftime('%d/%m/%Y') %> <%= expire ? t('find_certificate_results.expired') : '' %></td>
        </tr>
    <% end %>
  </tbody>
</table>
