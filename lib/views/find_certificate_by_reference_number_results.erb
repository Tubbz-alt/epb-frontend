<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <a
      href="<%= localised_url('/find-a-certificate/search-by-reference-number')%>"
      class="govuk-back-link">
      <%=t('layout.body.breadcrumb.back')%>
    </a>

    <h1 class="govuk-heading-xl">
      <%= t('find_certificate_by_reference_number_results.top_heading') %>
    </h1>

    <% if results.size > 0 %>
      <h2 class="govuk-heading-m"><%= t('find_certificate_by_reference_number_results.list', :length => results.length, :reference_number => params['reference_number'] ) %></h2>
      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

      <%== erb :find_certificate_list_certificate, locals: {
        certificate: results } %>
    <% else %>
      <p class="govuk-body">
        <%= t('find_certificate_by_reference_number_results.no_certificates') %>
      </p>
    <% end %>
  </div>
</div>
