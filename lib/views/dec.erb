<div class="govuk-grid-row">
  <div class="govuk-full-width">
    <div class="govuk-body">
      <a
        href="<%= localised_url('/find-a-non-domestic-certificate')%>"
        class="govuk-back-link">
        <%=t('layout.body.breadcrumb.back')%>
      </a>
      <h1 class="govuk-heading-xl"><%= t('dec.top_heading') %></h1>
    </div>
  </div>
  <div class="govuk-grid-column-one-third">
    <hr class="epc-blue-top" />
    <% content_sections = [
      {
        link: '#recommendations',
        text: 'non_domestic_epc.rr.recommendations.title'
      },
      {
        link: '#property_details',
        text: 'non_domestic_epc.rr.property_details.title'
      },
      {
        link: '#assessor_details',
        text: 'non_domestic_epc.rr.assessor_details.title'
      },
      {
        link: '#other_reports',
        text: 'non_domestic_epc.rr.other_reports.title'
      }
    ]
       if assessment[:energyBandFromRelatedCertificate]
         content_sections.unshift link: '#rating',
                                  text: 'non_domestic_epc.rr.rating.title'
       end
    %>
    <%== erb :component__contents, locals: {
      title: t("non_domestic_epc.rr.contents.title"),
      sections: content_sections
    } %>
  </div>

  <div class="govuk-grid-column-two-thirds epc-blue-bottom">
    <%== erb :component__epc_summary, locals: {
      energy_efficiency_band: assessment[:currentAssessment][:energyEfficiencyBand],
      address: assessment[:address],
      date_of_expiry: assessment[:dateOfExpiry],
      assessment_id: assessment[:assessmentId],
      property_type: nil,

    }
    %>

    <%== erb :dec__rating, locals: {
      assessment: assessment,
    } %>

    <%== erb :dec__previous_operational_ratings, locals: {
      current: assessment[:currentAssessment],
      year1: assessment[:year1Assessment],
      year2: assessment[:year2Assessment],
    }
    %>

    <%== erb :dec__co2, locals: {
      current: assessment[:currentAssessment],
      year1: assessment[:year1Assessment],
      year2: assessment[:year2Assessment],
    }
    %>

    <%== erb :dec__technical_information, locals: {
      assessment: assessment,
    }
    %>

    <%== erb :dec__administrative_information, locals: {
      assessment: assessment,
      address: assessment[:address],
      assessor: assessment[:assessor],
      administrative_information: assessment[:administrativeInformation]
    }
    %>

    <%== erb :component__related_assessments,
             locals: {
               relatedAssessments: assessment[:relatedAssessments],
               section_title: t('non_domestic_epc.sections.other_reports.title'),
               heading_certificate_reference: t('non_domestic_epc.sections.other_reports.certificate_reference'),
               heading_valid_until: t('non_domestic_epc.sections.other_reports.valid_until'),
               expired_text: t('non_domestic_epc.sections.other_reports.expired'),
               no_related_assessments: t('non_domestic_epc.sections.other_reports.no_related')
             }
    %>
  </div>
</div>
