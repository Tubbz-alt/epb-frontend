<div class="epc-blue-bottom govuk-!-display-none-print">
  <h2 class="govuk-heading-l"><%= section_title %></h2>
  <p class="govuk-body"><%= description %></p>

  <% if relatedAssessments.nil? || relatedAssessments.empty? %>
    <p class="govuk-body"><%= no_related_assessments %></p>
  <% else %>
    <dl class="govuk-summary-list">
      <% relatedAssessments.each do |related_assessment| %>
        <div class="govuk-summary-list__row govuk-summary-list__row--no-border">
          <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
            heading_certificate_reference
          %></dt>
          <dd class="govuk-summary-list__value govuk-!-width-one-half">
            <a href="<%= localised_url('/energy-performance-certificate/' + related_assessment[:assessmentId]) %>"><%= related_assessment[:assessmentId] %></a>
          </dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key govuk-!-width-one-half"><%=
            heading_valid_until
          %></dt>
          <dd class="govuk-summary-list__value govuk-!-width-one-half"><%
            if related_assessment[:assessmentStatus] == "EXPIRED" %>
              <span class="expired-text govuk-!-font-weight-bold"><%= date(related_assessment[:assessmentExpiryDate]) %> (<%= expired_text %>)</span>
            <% else %><%=
              date(related_assessment[:assessmentExpiryDate])
            %><% end %></dd>
        </div>
      <% end %>
    </dl>
  <% end %>
</div>
