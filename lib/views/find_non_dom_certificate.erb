<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t('find_non_dom_certificate.top_heading') %>
    </h1>
    <p class="govuk-body">
      <%= t('find_non_dom_certificate.service.introduction') %>
    </p>
    <p class="govuk-body">
      <%= t('find_non_dom_certificate.service.what_is_non_dom') %>
    </p>
    <p class="govuk-body">
      <%= t('find_non_dom_certificate.service.what_non_dom_info_is_available') %>
    </p>

    <ul class="govuk-list govuk-list--bullet">
      <li>
        <%= t('find_non_dom_certificate.service.epc_rr') %>
      </li>
      <li>
        <%= t('find_non_dom_certificate.service.dec_rr') %>
      </li>

      <li>
        <%= t('find_non_dom_certificate.service.ac') %>
      </li>
    </ul>

    <div class="govuk-inset-text">
      <%== t('find_non_dom_certificate.switch_language.description', :link => '<a href="' + t('find_non_dom_certificate.switch_language.url') + '">' + t('find_non_dom_certificate.switch_language.link') + '</a>' ) %>
    </div>

    <a
      href="<%= localised_url('/find-a-non-domestic-certificate/search-by-postcode') %>"
      role="button"
      draggable="false"
      class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
      data-module="govuk-button">
      <%= t('find_non_dom_certificate.cta') %>
      <svg
        class="govuk-button__start-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="17.5"
        height="19"
        viewBox="0 0 33 40"
        role="presentation"
        focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    </a>

    <h2 class="govuk-heading-m">
      <%= t('find_non_dom_certificate.before_you_start.heading') %>
    </h2>

    <p class="govuk-body">
      <%= t('find_non_dom_certificate.before_you_start.additional_support') %>
    </p>


    <p class="govuk-body epc-blue-bottom">
      <%== t('find_non_dom_certificate.before_you_start.scotland.description', :link => '<a href="https://www.scottishepcregister.org.uk/">' + t('find_non_dom_certificate.before_you_start.scotland.link') + '</a>') %>
    </p>

    <p class="govuk-body">
      <%== t('find_non_dom_certificate.check_if_epc_needed.intro', :link => '<a href="' + t('find_a_certificate.before_you_start.property_guidance.url') + '">' + t('find_a_certificate.before_you_start.property_guidance.link') + '</a>') %>
    </p>

    <ul class="govuk-list govuk-list--bullet">
      <li>
        <a href="https://www.gov.uk/energy-performance-certificate-commercial-property/exemptions">
          <%= t('find_non_dom_certificate.check_if_epc_needed.epc') %>
        </a>
      </li>
      <li>
        <a href="https://www.gov.uk/check-energy-performance-public-building">
          <%= t('find_non_dom_certificate.check_if_epc_needed.dec') %>
        </a>
      </li>
      <li>
        <a href="https://www.gov.uk/get-your-air-conditioning-system-inspected">
          <%= t('find_non_dom_certificate.check_if_epc_needed.ac') %>
        </a>
      </li>
    </ul>

  </div>
  <div class="govuk-grid-column-one-third">
    <aside class="app-related-items" role="complementary">
      <h2 class="govuk-heading-m" id="subsection-title">
        <%= t('find_non_dom_certificate.related_content.heading') %>
      </h2>
      <nav role="navigation" aria-labelledby="subsection-title">
        <ul class="govuk-list govuk-!-font-size-16">
          <li>
            <a class="govuk-link" href="/find-an-assessor">
              <%= t('find_non_dom_certificate.related_content.find_an_assessor_link') %>
            </a>
          </li>
          <li>
            <a class="govuk-link" href="/find-a-certificate">
              <%= t('find_non_dom_certificate.related_content.find_a_certificate_link') %>
            </a>
          </li>
        </ul>
      </nav>
    </aside>
  </div>
</div>
