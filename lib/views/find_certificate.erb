<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t('find_a_certificate.top_heading') %>
    </h1>
    <p class="govuk-body">
      <%= t('find_a_certificate.top_body') %>
    </p>

    <p class="govuk-body">
      <%= t('find_a_certificate.service.introduction') %>
    </p>
    <p class="govuk-body">
      <%= t('find_a_certificate.service.what_is_in_epc') %>
    </p>
    <p class="govuk-body">
      <%= t('find_a_certificate.service.need_epc') %>
    </p>

    <div class="govuk-inset-text">
      <%== t('find_a_certificate.before_you_start.switch_language.description', :link => '<a href="' + t('find_a_certificate.before_you_start.switch_language.url') + '">' + t('find_a_certificate.before_you_start.switch_language.link') + '</a>' ) %>
    </div>

    <a
      href="<%= localised_url('/find-a-certificate/search-by-postcode') %>"
      role="button"
      draggable="false"
      class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8"
      data-module="govuk-button">
        <%= t('find_a_certificate.cta') %>
      <svg
        class="govuk-button__start-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="17.5"
        height="19"
        viewBox="0 0 33 40"
        role="presentation"
        focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    </a>

    <h2 class="govuk-heading-m">
      <%= t('find_a_certificate.before_you_start.title') %>
    </h2>

    <p class="govuk-body">
      <%= t('find_a_certificate.before_you_start.call_center') %>
    </p>


    <p class="govuk-body">
      <%== t('find_a_certificate.before_you_start.scotland.text', :link => '<a href="https://www.gov.scot/publications/energy-performance-certificates-introduction/">' + t('find_a_certificate.before_you_start.scotland.cta') + '</a>') %>
    </p>

    <p class="govuk-body">
      <%== t('find_a_certificate.before_you_start.property_guidance.description', :link => '<a href="' + t('find_a_certificate.before_you_start.property_guidance.url') + '">' + t('find_a_certificate.before_you_start.property_guidance.link') + '</a>') %>
    </p>

    <p class="govuk-body">
      <%== t('find_a_certificate.before_you_start.commercial.text', :link => '<a href="' + t('find_a_certificate.before_you_start.commercial.url') + '">' + t('find_a_certificate.before_you_start.commercial.cta') + '</a>') %>
    </p>
  </div>
</div>
