<div id="technical_information" class="epc-blue-bottom">
  <h2 class="govuk-heading-l"><%= t('dec.sections.technical_information.title') %></h2>
  <dl class="govuk-summary-list">
    <% if assessment[:technicalInformation][:mainHeatingFuel] %>
      <div class="govuk-summary-list__row" id="heating">
        <dt class="govuk-summary-list__key govuk-!-width-one-half"><%= t('dec.sections.technical_information.heating_fuel') %></dt>
        <dd class="govuk-summary-list__value"><%= assessment[:technicalInformation][:mainHeatingFuel] %></dd>
      </div>
    <% end %>
    <div class="govuk-summary-list__row" id="building">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%= t('dec.sections.technical_information.building_environment') %></dt>
      <dd class="govuk-summary-list__value"><%= assessment[:technicalInformation][:buildingEnvironment] %></dd>
    </div>
    <div class="govuk-summary-list__row" id="floor">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%= t('dec.sections.technical_information.floor_area') %></dt>
      <dd class="govuk-summary-list__value"><%= assessment[:technicalInformation][:floorArea] %> <%= t('unit.square_metres') %></dd>
    </div>
    <div class="govuk-summary-list__row" id="asset">
      <dt class="govuk-summary-list__key govuk-!-width-one-half"><%= t('dec.sections.technical_information.asset_rating') %></dt>
      <dd class="govuk-summary-list__value"><%= assessment[:technicalInformation][:assetRating] %></dd>
    </div>
  </dl>

  <table class="govuk-table">
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header"><%= t('dec.sections.technical_information.energy_use') %></th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric"><%= t('dec.sections.technical_information.electricity') %></th>
      <th scope="col" class="govuk-table__header govuk-table__header--numeric"><%= t('dec.sections.technical_information.other_fuels') %></th>
    </tr>
    </thead>
    <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header"><%= t('dec.sections.technical_information.annual_energy_use') %></th>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:annualEnergyUseElectrical] %></td>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:annualEnergyUseFuelThermal] %></td>
    </tr>
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header"><%= t('dec.sections.technical_information.typical_energy_use') %></th>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:typicalElectricalUse] %></td>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:typicalThermalUse] %></td>
    </tr>
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header"><%= t('dec.sections.technical_information.energy_from_renewables') %></th>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:renewablesElectrical] %>%</td>
      <td class="govuk-table__cell govuk-table__cell--numeric"><%= assessment[:technicalInformation][:renewablesFuelThermal] %>%</td>
    </tr>
    </tbody>
  </table>
</div>
